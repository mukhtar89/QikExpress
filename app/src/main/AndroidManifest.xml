<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.equinox.qikexpress">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Utils.AppVolleyController"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBrHwdxsz9UFHuOrl5PBkQ91ZjTLT1d7_s" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.LoginActivity"
            android:label="Sign In"
            android:parentActivityName=".Activities.MainActivity"
            android:theme="@style/FullHeightDialog">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.equinox.qikexpress.Activities.MainActivity" />
        </activity>
        <activity
            android:name=".Activities.GroceryListActivity"
            android:label="@string/grocery_activity_name"
            android:parentActivityName=".Activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.GroceryItemsMainActivity"
            android:label="@string/title_activity_grocery_item"
            android:parentActivityName=".Activities.GroceryListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.equinox.qikexpress.Activities.GroceryListActivity" />
        </activity>
        <activity
            android:name=".Activities.InfoReviewActivity"
            android:label="@string/title_activity_info_review"
            android:parentActivityName=".Activities.GroceryItemsMainActivity"
            android:theme="@style/FullHeightDialog">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.equinox.qikexpress.Activities.GroceryItemsMainActivity" />
        </activity>
        <activity
            android:name=".Activities.GroceryItemActivity"
            android:parentActivityName=".Activities.GroceryItemsMainActivity"
            android:theme="@style/FullHeightDialog" />
        <activity
            android:name=".Activities.WalletActivity"
            android:label="@string/title_activity_wallet"
            android:parentActivityName=".Activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.equinox.qikexpress.Activities.MainActivity" />
        </activity>
        <activity
            android:name=".Activities.GroceryShoppingCartActivity"
            android:label="@string/title_activity_grocery_shopping_cart"
            android:parentActivityName=".Activities.GroceryListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.equinox.qikexpress.Activities.GroceryListActivity" />
        </activity>
        <activity
            android:name=".Activities.CheckoutActivity"
            android:label="@string/title_activity_checkout"
            android:parentActivityName=".Activities.GroceryShoppingCartActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.equinox.qikexpress.Activities.GroceryShoppingCartActivity" />
        </activity>
    </application>

</manifest>