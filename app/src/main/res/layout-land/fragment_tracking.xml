<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.equinox.qikexpress.Activities.TrackingActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:id="@+id/time_submitted_incoming">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:padding="2dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:id="@+id/timestamp_incoming"
                        android:textColor="@color/red"
                        android:text="10:53:29 AM"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_alarm_add_white_48dp"
                        android:tint="@color/red"
                        android:layout_gravity="center_vertical|center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:padding="2dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/red"
                        android:text="INCOMING"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/order_status_card"
                    android:layout_alignTop="@+id/order_status_card"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/order_chain_incoming"
                    android:layout_toRightOf="@+id/time_submitted_incoming"  >
                    <include layout="@layout/vertical_train_inactive_top_circle" />
                    </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_status_card"
                    android:layout_toRightOf="@+id/order_chain_incoming"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="2dp"
                    card_view:cardCornerRadius="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:layout_margin="10dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:id="@+id/shop_brand_image"
                                android:src="@drawable/restaurant_edited" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="20dp"
                                android:layout_toLeftOf="@+id/shop_brand_image"
                                android:text="Your order has been placed at  currentOrder getShop() getName() at StringManipulation getFormattedTime (currentOrder.getTimestamp()"/>
                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/order_card_header_background">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                style="@style/Widget.AppCompat.Button.Borderless">
                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_margin="5dp"
                                    android:tint="@android:color/holo_red_dark"
                                    android:id="@+id/order_card_header_icon"
                                    android:src="@drawable/ic_info_white_48dp"
                                    android:layout_gravity="center_vertical|center_horizontal" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/holo_red_dark"
                                    android:text="Store Details"
                                    android:id="@+id/order_card_header_title"
                                    android:textSize="12sp"
                                    android:gravity="start"
                                    android:padding="5dp" />
                            </LinearLayout>

                            </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:id="@+id/time_submitted_processing">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:padding="2dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:id="@+id/timestamp_processing"
                        android:textColor="#ff8300"
                        android:text="10:53:29 AM"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_alarm_white_48dp"
                        android:tint="#ff8300"
                        android:layout_gravity="center_vertical|center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:padding="2dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#ff8300"
                        android:text="PROCESSING"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/order_status_card_processing"
                    android:layout_alignTop="@+id/order_status_card_processing"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/order_chain_processing"
                    android:layout_toRightOf="@+id/time_submitted_processing"  >
                    <include layout="@layout/vertical_train_inactive_bottom_circle" />
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_status_card_processing"
                    android:layout_toRightOf="@+id/order_chain_processing"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="2dp"
                    card_view:cardCornerRadius="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:layout_margin="10dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:id="@+id/shop_brand_image_processing"
                                android:src="@drawable/restaurant_edited" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="20dp"
                                android:layout_toLeftOf="@+id/shop_brand_image_processing"
                                android:text="Your order has been placed at  currentOrder getShop() getName() at StringManipulation getFormattedTime (currentOrder.getTimestamp()"/>
                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/order_card_header_background_processing">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                style="@style/Widget.AppCompat.Button.Borderless">
                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_margin="5dp"
                                    android:tint="#ff8300"
                                    android:id="@+id/order_card_header_icon_processing"
                                    android:src="@drawable/ic_chat_white_48dp"
                                    android:layout_gravity="center_vertical|center_horizontal" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textColor="#ff8300"
                                    android:text="Employee Chat"
                                    android:id="@+id/order_card_header_title_processing"
                                    android:textSize="12sp"
                                    android:gravity="start"
                                    android:padding="5dp" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
