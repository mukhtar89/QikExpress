<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="45dp"
    android:weightSum="3"
    android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:id="@+id/sort_by"
            android:weightSum="3"
            style="@style/Widget.AppCompat.Button.Borderless" >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/ic_sort_by_alpha_white_48dp"
                android:layout_gravity="center_vertical|end"
                android:tint="#FFFFFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="SORT"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_vertical|start" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:id="@+id/filter_by"
            android:weightSum="3"
            style="@style/Widget.AppCompat.Button.Borderless" >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/ic_filter_list_white_48dp"
                android:layout_gravity="center_vertical|end"
                android:tint="#FFFFFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="FILTER"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_vertical|start" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:id="@+id/track_order"
            android:weightSum="3"
            style="@style/Widget.AppCompat.Button.Borderless" >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/ic_track_changes_white_48dp"
                android:layout_gravity="center_vertical|end"
                android:tint="#FFFFFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="TRACK"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_vertical|start" />
        </LinearLayout>

</LinearLayout>