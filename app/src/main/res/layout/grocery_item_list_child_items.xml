<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/grocery_item_card"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="2dp">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:padding="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/grocery_item_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_marginTop="130dp"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/grocery_item_name"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#0000ff"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/grocery_item_price"
                android:layout_gravity="center_vertical|start"
                android:gravity="end"
                android:textSize="18sp"
                android:textColor="#ff7f00"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_add_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:layout_gravity="top|end"
            app:fabSize="mini"
            app:borderWidth="0dp"
            android:backgroundTint="@color/colorAccent"
            app:srcCompat="@drawable/ic_add_shopping_cart_white_48dp" />

    </android.support.design.widget.CoordinatorLayout>

</android.support.v7.widget.CardView>