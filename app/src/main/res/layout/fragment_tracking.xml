                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_alarm_on_white_48dp"
                        android:tint="#795548"
                        android:layout_gravity="center_vertical|center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:padding="2dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#795548"
                        android:text="COMPLETED"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/order_status_card_completed"
                    android:layout_alignTop="@+id/order_status_card_completed"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    android:id="@+id/order_chain_completed"
                    android:layout_toRightOf="@+id/time_submitted_completed"  >
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_status_card_completed"
                    android:layout_toRightOf="@+id/order_chain_completed"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="2dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_margin="10dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:id="@+id/shop_brand_image_completed"
                                android:src="@drawable/restaurant_edited" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="20dp"
                                android:id="@+id/status_text_message_completed"
                                android:layout_toLeftOf="@+id/shop_brand_image_completed"
                                android:text="Your order has been placed at  currentOrder getShop() getName() at StringManipulation getFormattedTime (currentOrder.getTimestamp()"/>
                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:id="@+id/order_card_header_background_completed">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:id="@+id/bill_details_completed"
                                android:layout_weight="1"
                                style="@style/Widget.AppCompat.Button.Borderless">
                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_margin="5dp"
                                    android:tint="#795548"
                                    android:src="@drawable/ic_attach_money_white_48dp"
                                    android:layout_gravity="center_vertical|center_horizontal" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textColor="#795548"
                                    android:text="Bill Details"
                                    android:textSize="12sp"
                                    android:gravity="start"
                                    android:padding="5dp" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:id="@+id/time_submitted_pickedup">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:padding="2dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:id="@+id/timestamp_pickedup"
                        android:textColor="@android:color/holo_blue_dark"
                        android:text=""/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_person_pin_white_48dp"
                        android:tint="@android:color/holo_blue_dark"
                        android:layout_gravity="center_vertical|center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:padding="2dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_blue_dark"
                        android:text="PICKED UP"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/order_status_card_pickedup"
                    android:layout_alignTop="@+id/order_status_card_pickedup"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    android:id="@+id/order_chain_pickedup"
                    android:layout_toRightOf="@+id/time_submitted_pickedup"  >
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_status_card_pickedup"
                    android:layout_toRightOf="@+id/order_chain_pickedup"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="2dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/order_card_header_background_pickedup">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/delivery_edited"/>

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="20dp"
                                android:id="@+id/status_text_message_pickedup"
                                android:text="Your order has been placed at  currentOrder getShop() getName() at StringManipulation getFormattedTime (currentOrder.getTimestamp()"/>
                        </RelativeLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:id="@+id/time_submitted_enroute">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:padding="2dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:id="@+id/timestamp_enroute"
                        android:textColor="#7f00ff"
                        android:text=""/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_near_me_white_48dp"
                        android:tint="#7f00ff"
                        android:layout_gravity="center_vertical|center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:padding="2dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#7f00ff"
                        android:text="EN ROUTE"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/order_status_card_enroute"
                    android:layout_alignTop="@+id/order_status_card_enroute"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    android:id="@+id/order_chain_enroute"
                    android:layout_toRightOf="@+id/time_submitted_enroute"  >
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_status_card_enroute"
                    android:layout_toRightOf="@+id/order_chain_enroute"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="2dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_margin="10dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:id="@+id/shop_brand_image_enroute"
                                android:src="@drawable/restaurant_edited" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="20dp"
                                android:id="@+id/status_text_message_enroute"
                                android:layout_toLeftOf="@+id/shop_brand_image_enroute"
                                android:text="Your order has been placed at  currentOrder getShop() getName() at StringManipulation getFormattedTime (currentOrder.getTimestamp()"/>
                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:id="@+id/order_card_header_background_enroute">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:id="@+id/driver_chat_enroute"
                                style="@style/Widget.AppCompat.Button.Borderless">
                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_margin="5dp"
                                    android:tint="#7f00ff"
                                    android:src="@drawable/ic_chat_white_48dp"
                                    android:layout_gravity="center_vertical|center_horizontal" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textColor="#7f00ff"
                                    android:text="Driver Chat"
                                    android:textSize="12sp"
                                    android:gravity="start"
                                    android:padding="5dp" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:id="@+id/time_submitted_delivered">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:padding="2dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:id="@+id/timestamp_delivered"
                        android:textColor="@android:color/holo_green_dark"
                        android:text=""/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_beenhere_white_48dp"
                        android:tint="@android:color/holo_green_dark"
                        android:layout_gravity="center_vertical|center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:padding="2dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
