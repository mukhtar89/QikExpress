                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/order_status_card_delivered"
                    android:layout_alignTop="@+id/order_status_card_delivered"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    android:id="@+id/order_chain_delivered"
                    android:layout_toRightOf="@+id/time_submitted_delivered"  >
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_status_card_delivered"
                    android:layout_toRightOf="@+id/order_chain_delivered"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="2dp"
