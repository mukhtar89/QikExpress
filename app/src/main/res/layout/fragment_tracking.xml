<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="-20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    tools:context="com.equinox.qikexpress.Activities.TrackingActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:id="@+id/time_submitted_incoming">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:padding="2dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:id="@+id/timestamp_incoming"
                        android:textColor="@android:color/holo_red_dark"
                        android:text=""/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_alarm_add_white_48dp"
                        android:tint="@android:color/holo_red_dark"
                        android:layout_gravity="center_vertical|center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:padding="2dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_red_dark"
                        android:text="INCOMING"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/order_status_card_incoming"
                    android:layout_alignTop="@+id/order_status_card_incoming"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/order_chain_incoming"
                    android:orientation="horizontal"
                    android:layout_toRightOf="@+id/time_submitted_incoming"  >
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_status_card_incoming"
                    android:layout_toRightOf="@+id/order_chain_incoming"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="2dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_margin="10dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:id="@+id/shop_brand_image"
                                android:src="@drawable/restaurant_edited" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="20dp"
                                android:id="@+id/status_text_message_incoming"
                                android:layout_toLeftOf="@+id/shop_brand_image"
                                android:text="Your order has been placed at  currentOrder getShop() getName() at StringManipulation getFormattedTime (currentOrder.getTimestamp()"/>
                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/order_card_header_background">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:id="@+id/store_details_incoming"
                                style="@style/Widget.AppCompat.Button.Borderless">
                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_margin="5dp"
                                    android:tint="@android:color/holo_red_dark"
                                    android:src="@drawable/ic_info_white_48dp"
                                    android:layout_gravity="center_vertical|center_horizontal" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/holo_red_dark"
                                    android:text="Store Details"
                                    android:textSize="12sp"
                                    android:gravity="start"
                                    android:padding="5dp" />
                            </LinearLayout>

                            </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:id="@+id/time_submitted_processing">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:padding="2dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:id="@+id/timestamp_processing"
                        android:textColor="#ff8300"
                        android:text=""/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_alarm_white_48dp"
                        android:tint="#ff8300"
                        android:layout_gravity="center_vertical|center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:padding="2dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#ff8300"
                        android:text="PROCESSING"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/order_status_card_processing"
                    android:layout_alignTop="@+id/order_status_card_processing"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    android:id="@+id/order_chain_processing"
                    android:layout_toRightOf="@+id/time_submitted_processing" >
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_status_card_processing"
                    android:layout_toRightOf="@+id/order_chain_processing"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="2dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_margin="10dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:id="@+id/shop_brand_image_processing"
                                android:src="@drawable/restaurant_edited" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="20dp"
                                android:id="@+id/status_text_message_processing"
                                android:layout_toLeftOf="@+id/shop_brand_image_processing"
                                android:text="Your order has been placed at  currentOrder getShop() getName() at StringManipulation getFormattedTime (currentOrder.getTimestamp()"/>
                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:id="@+id/order_card_header_background_processing">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:id="@+id/employee_chat_processing"
                                style="@style/Widget.AppCompat.Button.Borderless">
                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_margin="5dp"
                                    android:tint="#ff8300"
                                    android:src="@drawable/ic_chat_white_48dp"
                                    android:layout_gravity="center_vertical|center_horizontal" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textColor="#ff8300"
                                    android:text="Employee Chat"
                                    android:textSize="12sp"
                                    android:gravity="start"
                                    android:padding="5dp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:id="@+id/order_details_processing"
                                style="@style/Widget.AppCompat.Button.Borderless">
                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_margin="5dp"
                                    android:tint="#ff8300"
                                    android:src="@drawable/ic_toll_white_48dp"
                                    android:layout_gravity="center_vertical|center_horizontal" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textColor="#ff8300"
                                    android:text="Processing Status"
                                    android:textSize="12sp"
                                    android:gravity="start"
                                    android:padding="5dp" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:id="@+id/time_submitted_completed">

                    <TextView
